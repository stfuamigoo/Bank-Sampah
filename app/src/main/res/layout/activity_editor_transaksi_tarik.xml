<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.transaksi_tarik.EditorTransaksiTarik">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/colorPrimary"
                android:id="@+id/rv1"/>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/transaksitarik"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:id="@+id/eu_gambar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eu_gambar"
                android:id="@+id/eu_nama"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_bold"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Edit Transaksi Tarik"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etttxt_tanggal_tarik"
                android:text="@string/tanggal_tarik"
                android:layout_below="@id/rv1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gothammedium"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etttxt_tanggal_tarik"
                android:layout_toRightOf="@id/ic_date"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_tanggal_tarik"
                android:hint="@string/tanggal_tarik"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="#000"/>
            <ImageView
                android:src="@drawable/ic_date"
                android:layout_gravity="center_vertical"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@id/rv1"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/ic_date"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etttxt_nama"
                android:text="@string/nama"
                android:layout_below="@id/ett_tanggal_tarik"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gothammedium"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/etttxt_nama"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_nama_user"
                android:hint="@string/nama"
                android:fontFamily="@font/nunitosans_regular"
                android:enabled="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etttxt_saldo"
                android:text="@string/saldo"
                android:layout_below="@id/ett_nama_user"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gothammedium"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etttxt_saldo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_saldo"
                android:hint="@string/saldo"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="number"
                android:enabled="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etttxt_jumlah_tarik"
                android:text="@string/jumlah_tarik"
                android:layout_below="@id/ett_saldo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gothammedium"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etttxt_jumlah_tarik"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_jumlah_tarik"
                android:hint="@string/jumlah_tarik"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etttxt_keterangan"
                android:text="@string/keterangan"
                android:layout_below="@id/ett_jumlah_tarik"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gothammedium"
                android:textSize="16sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etttxt_keterangan"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_keterangan"
                android:hint="@string/keterangan"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="text"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ett_keterangan"
                android:background="@drawable/round_btn"
                android:layout_marginTop="20dp"
                android:text="UBAH"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_btnubah"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ett_btnubah"
                android:background="@drawable/round_btn_danger"
                android:layout_marginTop="20dp"
                android:text="HAPUS"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_bold"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_btnhapus" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etttxt_keterangan"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ett_id_user"
                android:hint="@string/keterangan"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="text"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>