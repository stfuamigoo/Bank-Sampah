<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Home">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bgimg"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/bg2"/>
        <TextView
            android:id="@+id/judul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Sampah Muda Karya"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>
        <TextView
            android:id="@+id/judul2"
            android:layout_below="@id/judul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitosans_regular"
            android:text="Merubah sampah menjadi penghasilan tambahan Anda !!!"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/round_btn"
            android:id="@+id/btnlogin"
            android:layout_below="@id/judul2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:text="LOGIN"
            android:textColor="#fff"
            android:fontFamily="@font/gotham_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnlogin"
            android:id="@+id/judul3"
            android:text="TERTARIK BERGABUNG ???"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/judul4"
            android:layout_below="@id/judul3"
            android:padding="50dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:text="@string/penjelasan_tertarik"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="410dp"
            android:background="#186eb9"
            android:layout_below="@+id/judul3"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/img1"
            android:layout_below="@id/judul4"
            android:src="@drawable/img1"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/img2"
            android:layout_below="@id/judul4"
            android:src="@drawable/img2"
            android:layout_alignLeft="@id/img1"
            android:layout_marginLeft="180dp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/img3"
            android:layout_below="@id/img1"
            android:src="@drawable/img3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/img4"
            android:layout_below="@id/img2"
            android:src="@drawable/img4"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="180dp"
            android:layout_alignLeft="@id/img3"
            android:layout_marginBottom="60dp"/>
    </RelativeLayout>
</ScrollView>